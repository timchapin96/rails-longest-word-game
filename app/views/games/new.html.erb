<div class="letters">
<% @real_letters.each do |letter| %>
  <p><%= letter %></p>
<% end %>
</div>
<div class="form_guess">
  <form action="score" method="POST" data-turbo="false">
    <label for="guess">Find a letter</label>
    <input type="text" name="guess" id = "guess">
    <input type="submit">
    <%= hidden_field_tag :letters, @real_letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  </form>
</div>
